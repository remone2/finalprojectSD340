@model Project

<h1 style="text-align:center;">Edit Project</h1>

<p>
     <a asp-controller="PM" asp-action="PMDashboard">Project Manager Dashboard</a> |
     <a asp-controller="PM" asp-action="PMNotifications">PM Notifications</a>
</p>

<hr/>

<form asp-controller="PM" asp-action="PMEditProject" method="post">
    <input type="hidden" name="projectId" value="@Model.Id"/>
    <label>Project Name</label>
    <br/>
    <input type="text" name="name" required="required" value="@Model.Name"/>
    <br/>
    <label style="margin-top:5px;">Project Description</label>
    <br/>
    <textarea rows="10" cols="30" name="desc">@Model.Description</textarea>
    <br/>
    <label style="margin-top:5px;">Budget</label>
    <br/>
    <input type="number" min="0" name="budget" required="required" value="@Model.Budget"/>
    <br/>
    <label style="margin-top:5px;">Priority</label>
    <br/>
    <select name="priority" asp-items="@Html.GetEnumSelectList<Priority>()">
    </select>
    <br/>
    <label style="margin-top:5px;">Deadline</label>
    <br/>
    <input type="date" name="deadline" min="@DateTime.Now.Date.ToString("d")" value="@Model.Deadline.Date.ToString("d")"/>
    <br/>
    <button style="margin-top:10px;" type="submit">Save Changes</button>
</form>