<h1>Assign Task to a Developer</h1>

<p>
     <a asp-controller="PM" asp-action="PMDashboard">Project Manager Dashboard</a> |
     <a asp-action="">PM Notifications</a>
</p>

<form asp-controller="PM" asp-action="PMAssignTask" method="post">
    <select asp-items="@ViewBag.Developers" name="devId"></select>
    <select asp-items="@ViewBag.Tasks" name="taskId"></select>
    <button type="submit">Submit</button>
</form>

<br />

<p>@ViewBag.Message</p>